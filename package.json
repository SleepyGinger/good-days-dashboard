{
  "name": "good-days-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--require ./fix-localstorage.js' next dev -p 3000",
    "build": "next build --no-lint",
    "build:ios": "CAPACITOR_BUILD=1 next build --no-lint",
    "cap:sync": "npx cap sync",
    "deploy": "npm run build && git push",
    "deploy:ios": "npm run build:ios && npx cap sync ios && xcodebuild archive -project ios/App/App.xcodeproj -scheme 'Good Days' -archivePath ios/build/GoodDays.xcarchive -destination 'generic/platform=iOS' -allowProvisioningUpdates && xcodebuild -exportArchive -archivePath ios/build/GoodDays.xcarchive -exportOptionsPlist ios/ExportOptions.plist -allowProvisioningUpdates"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^11.6.0",
    "framer-motion": "^12.7.4",
    "lightningcss": "^1.30.2",
    "lucide-react": "^0.501.0",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-day-picker": "^9.6.7",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.5",
    "typescript": "^5"
  }
}
